<div class="container">
	<div class="row header">
		<div class="col-md-12">
			<h3 class="logo">
				<a href="/">My Assets</a>
			</h3>
			<h4>Sign up</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="wrapper clearfix">
				<div class="formy">
					<div class="row">
						<div class="col-md-12">
              <%= simple_form_for resource_name, url: registration_path(resource_name), as: 'user_horizontal', html: { class: 'form-vertical' },
                wrapper: :vertical_form,
                wrapper_mappings: {
                  check_boxes: :horizontal_radio_and_checkboxes,
                } do |f| %>
                <%= f.error_notification %>

                <%= f.input :email, placeholder: 'Email', required: false, autofocus: true %>

                <%= f.input :password, placeholder: 'Password', autocomplete: "off", required: false %>
                <%= f.input :password_confirmation, placeholder: 'Password', autocomplete: "off", required: false %>
                
					  		<div class="checkbox">
					    		<label>
					      			<input type="checkbox"> You have read & agree to the 
					      			<a href="#">Terms of service</a>.
					    		</label>
					  		</div>
                <div class="submit">
                  <%= f.button :submit, "Create my account", class: "button-clear" %>
                </div>
              <% end %>

              
						</div>
					</div>						
				</div>
			</div>
			<div class="already-account">
        <%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>