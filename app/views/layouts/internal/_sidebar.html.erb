<aside class="fixed skin-6">
	<div class="sidebar-inner scrollable-sidebar">
		<div class="size-toggle">
			<a class="btn btn-sm" id="sizeToggle">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a class="btn btn-sm pull-right"  href="/logout">
				<i class="fa fa-power-off"></i>
			</a>
		</div><!-- /size-toggle -->	
		<div class="user-block clearfix">
      <%= image_tag "user.jpg", alt: "User Avatar" %>
			<div class="detail">
				<strong><%= current_user.name.titleize %></strong>
				<ul class="list-inline">
					<li><a href="/profile">Profile</a></li>
					<!-- <li><a href="/inbox" class="no-margin">Inbox</a></li> -->
				</ul>
			</div>
		</div><!-- /user-block -->
		<div class="main-menu">
			<ul>
				<li class="<%= 'active' if controller_name == "home" %>">
					<a href="/dashboard">
						<span class="menu-icon">
							<i class="fa fa-desktop fa-lg"></i> 
						</span>
						<span class="text">
							Dashboard
						</span>
						<span class="menu-hover"></span>
					</a>
				</li>
				<li class="openable open <%= 'active' if controller_name == "items" %>">
					<a href="#">
						<span class="menu-icon">
							<i class="fa fa-file-text fa-lg"></i> 
						</span>
						<span class="text">
							Items
						</span>
						<span class="menu-hover"></span>
					</a>
					<ul class="submenu">
						<li class="<%= 'active' if action_name == "index" %>"><a href="/items"><span class="submenu-label">View Items</span></a></li>
						<li class="<%= 'active' if action_name == "new" %>"><a href="/items/new"><span class="submenu-label">New Item</span></a></li>
					</ul>
				</li>
			</ul>
		</div><!-- /main-menu -->
	</div><!-- /sidebar-inner -->
</aside>